{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "richtext",
      "required": true
    },
    "public": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 50,
      "maxLength": 160
    },
    "category": {
      "type": "enumeration",
